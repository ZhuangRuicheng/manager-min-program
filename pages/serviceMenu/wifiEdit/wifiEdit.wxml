<!--pages/hotelInfoEdit/wifiEdit/wifiEdit.wxml-->
<view class='box'>
<!-- 表单头 -->
<form bindsubmit="formSubmit">
  <view class='header'>
    <text class='title'>WIFI账号:</text>
    <view class='input'>
    <input placeholder='请输入酒店wifi' placeholder-class='placeholder' value='{{account}}' bindinput='inputChanged' id='account' maxlength='20'></input>
    </view>
  </view>
  <view class='header pwd'>
    <text class='title'>密码:</text>
    <view class='input'>
    <input placeholder='请输入酒店wifi' placeholder-class='placeholder' class='password' value='{{password}}' bindinput='inputChanged' id='password' maxlength='20'></input>
    </view>
  </view>
  <button class='btn' form-type='submit'>保存</button>
  </form>
  <!-- 表单尾 -->
</view>
